# Forge Platform Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Platform Configuration
# =============================================================================

# HTTP server port
PORT=8080

# Enable debug mode
DEBUG=false

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10s

# HTTP read timeout
READ_TIMEOUT=10s

# HTTP write timeout
WRITE_TIMEOUT=10s

# =============================================================================
# Kubernetes Configuration
# =============================================================================

# Path to kubeconfig file (leave empty for in-cluster config)
KUBE_CONFIG_PATH=

# Kubernetes namespace for agent pods
AGENT_NAMESPACE=default

# =============================================================================
# Container Registry Configuration
# =============================================================================

# Container registry host (e.g., ghcr.io, docker.io)
CONTAINER_REGISTRY=ghcr.io

# Registry namespace/organization
CONTAINER_NAMESPACE=notzree

# Agent image name
AGENT_IMAGE_NAME=forge-agent

# Agent image tag
AGENT_IMAGE_TAG=latest

# Kubernetes secret name for private registry authentication (optional)
IMAGE_PULL_SECRET=

# =============================================================================
# Database Configuration (optional - platform is stateless)
# =============================================================================

# Turso database URL
TURSO_URL=

# Turso authentication token
TURSO_AUTH_TOKEN=

# =============================================================================
# Agent Configuration (used by agent containers, not platform)
# =============================================================================

# Unique agent identifier (set automatically by platform)
# AGENT_ID=

# Agent gRPC server port
# AGENT_PORT=8080

# Working directory for agent operations
# AGENT_CWD=

# Claude model to use
# CLAUDE_MODEL=claude-sonnet-4-20250514

# Permission mode: default, acceptEdits, bypassPermissions
# PERMISSION_MODE=acceptEdits

# Comma-separated list of allowed tools
# ALLOWED_TOOLS=Read,Write,Edit,Bash,Glob,Grep,WebSearch,WebFetch

# Anthropic API key (required for agent)
ANTHROPIC_API_KEY=
