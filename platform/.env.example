# Forge Platform Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Server Configuration
# =============================================================================

# HTTP server port
PORT=8080

# Enable debug mode
DEBUG=false

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10s

# HTTP read timeout
READ_TIMEOUT=10s

# HTTP write timeout
WRITE_TIMEOUT=10s

# =============================================================================
# Kubernetes Configuration
# =============================================================================

# Path to kubeconfig file (leave empty for in-cluster config)
KUBE_CONFIG_PATH=

# Kubernetes namespace for agent pods
AGENT_NAMESPACE=default

# Host/IP for NodePort service access when running platform locally (e.g., "localhost")
# Leave empty when running platform inside the cluster (uses pod IPs directly)
NODE_HOST=localhost

# =============================================================================
# Container Registry Configuration
# =============================================================================

# Container registry host (e.g., ghcr.io, docker.io)
CONTAINER_REGISTRY=ghcr.io

# Registry namespace/organization
CONTAINER_NAMESPACE=notzree

# Agent image name
AGENT_IMAGE_NAME=forge-agent

# Agent image tag
AGENT_IMAGE_TAG=latest

# Kubernetes secret name for private registry authentication (optional)
IMAGE_PULL_SECRET=

# =============================================================================
# Database Configuration
# =============================================================================

# Development database URL (used with --env=dev or by default)
DATABASE_URL_DEV=postgres://forge:forge@localhost:5432/forge_dev?sslmode=disable

# Production database URL (used with --env=prod)
DATABASE_URL_PROD=
